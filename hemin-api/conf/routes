# Misc Non-API routes that serve dashboards, etc
GET   /                               api.v1.controllers.HomeController.index

# Swagger API docs
GET   /swagger.json                   controllers.ApiHelpController.getResources
GET   /docs/                          controllers.Assets.at(path="/public/swagger",file="index.html")
GET   /docs/*file                     controllers.Assets.at(path="/public/swagger",file)

# Map static resources from the /public folder to the /assets URL path
#GET   /assets/*file                   controllers.Assets.at(path="/public/assets", file)

# JSON example files
GET   /json-examples/*file            controllers.Assets.at(path="/public/json-examples",file)

# API resources
GET   /api/v1/search                  api.v1.controllers.SearchController.search(q: String, p: Option[Int], s: Option[Int])
GET   /api/v1/podcast                 api.v1.controllers.PodcastController.all(p: Option[Int], s: Option[Int])
GET   /api/v1/podcast/teaser          api.v1.controllers.PodcastController.allAsTeaser(p: Option[Int], s: Option[Int])
GET   /api/v1/podcast/newest          api.v1.controllers.PodcastController.newest(pageNumber: Option[Int], pageSize: Option[Int])
GET   /api/v1/podcast/:id             api.v1.controllers.PodcastController.find(id: String)
GET   /api/v1/podcast/:id/episodes    api.v1.controllers.PodcastController.episodes(id: String)
GET   /api/v1/podcast/:id/feeds       api.v1.controllers.PodcastController.feeds(id: String)
GET   /api/v1/episode/latest          api.v1.controllers.EpisodeController.latest(pageNumber: Option[Int], pageSize: Option[Int])
GET   /api/v1/episode/:id             api.v1.controllers.EpisodeController.find(id: String)
GET   /api/v1/episode/:id/chapters    api.v1.controllers.EpisodeController.chapters(id: String)
GET   /api/v1/feed/:id                api.v1.controllers.FeedController.find(id: String)
POST  /api/v1/feed/propose            api.v1.controllers.FeedController.propose
GET   /api/v1/image/:id               api.v1.controllers.ImageController.find(id: String)
POST  /api/v1/cli                     api.v1.controllers.CliController.eval
GET   /api/v1/stats/database          api.v1.controllers.StatsController.database
->    /api/v1/posts                   example.post.PostRouter

